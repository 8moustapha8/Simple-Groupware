<table modulename="{t}Templates{/t}" default_view="display" orderby="tplname" order="asc" limit="20" enable_new="true" enable_edit="true" enable_delete="true" enable_empty="true">
  <view name="display" displayname="{t}Display{/t}">
  </view>
  <field name="tplname" displayname="{t}Name{/t}" simple_type="text" is_unique="true" required="true">
  </field>
  <field name="tplcontent" displayname="{t}Content{/t}" simple_type="textarea" required="true">
  </field>
</table>